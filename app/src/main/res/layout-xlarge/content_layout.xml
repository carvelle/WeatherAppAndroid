<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:layout_gravity="bottom"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent">
    <android.support.v7.widget.GridLayout
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        android:layout_weight="0.5">
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:id="@+id/date_label"
            android:text="Sunday, April 15"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView"
            grid:layout_columnSpan="2"/>
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_width="0dp"
            grid:layout_columnWeight="1.5"
            grid:layout_rowWeight="1"
            android:textSize="90pt"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView"
            android:id="@+id/main_temp"
            android:text="20" />
        <LinearLayout
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            grid:layout_columnWeight="1.5"
            grid:layout_rowWeight="1"
            android:textSize="50pt"
            android:weightSum="1"
            android:orientation="vertical"
            grid:layout_gravity="fill">
            <ImageView
                android:layout_weight=".7"
                android:gravity="start"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/d01"
                android:id="@+id/icon_image"/>

        </LinearLayout>

        <za.co.dvt.Widgets.TypefaceTextView
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:textSize="20pt"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".3"
            grid:layout_gravity="fill"
            android:id="@+id/max_temp"
            style="@style/WeatherTextView"
            android:text="25" />
        <za.co.dvt.Widgets.TypefaceTextView
            android:gravity="center"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".3"
            android:textSize="20pt"
            grid:layout_gravity="fill"
            android:id="@+id/area_label"
            style="@style/WeatherTextView"
            android:text="Midrand, South Africa" />
        <za.co.dvt.Widgets.TypefaceTextView
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            android:textSize="20pt"
            grid:layout_rowWeight=".3"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView"
            android:id="@+id/min_temp"
            android:text="19" />
        <za.co.dvt.Widgets.TypefaceTextView
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            android:textSize="14pt"
            grid:layout_rowWeight=".3"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView"
            android:id="@+id/last_updated"
            android:text="19" />
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout

        android:gravity="bottom"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        android:layout_weight="0.3">
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:background="#80000000"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        grid:alignmentMode="alignBounds"
        grid:columnCount="3"
        android:layout_weight="0.1">
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/day_label_row1"
            android:text="Monday"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            grid:layout_rowSpan="2"
            style="@style/WeatherTextView" />
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:id="@+id/ext_max_temp_row1"
            android:text="22"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView" />
        <LinearLayout
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            android:weightSum="1"
            grid:layout_rowSpan="2"
            android:orientation="vertical"
            grid:layout_gravity="fill">
            <ImageView
                android:layout_weight=".7"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/d01"
                android:id="@+id/ext_icon_image_row1"/>

        </LinearLayout>
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:id="@+id/ext_min_temp_row1"
            android:text="15"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView" />

    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:background="#80000000"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        grid:alignmentMode="alignBounds"
        grid:columnCount="3"
        android:layout_weight="0.1">

        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/day_label_row2"
            android:text="Monday"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            grid:layout_rowSpan="2"
            style="@style/WeatherTextView" />
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:id="@+id/ext_max_temp_row2"
            android:text="22"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView" />
        <LinearLayout
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            android:weightSum="1"
            grid:layout_rowSpan="2"
            android:orientation="vertical"
            grid:layout_gravity="fill">
            <ImageView
                android:layout_weight=".7"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/d01"
                android:id="@+id/ext_icon_image_row2"/>

        </LinearLayout>
        <za.co.dvt.Widgets.TypefaceTextView
            android:layout_margin="10dp"
            android:id="@+id/ext_min_temp_row2"
            android:text="15"
            android:layout_height="0dp"
            android:textSize="20pt"
            android:layout_width="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight=".4"
            grid:layout_gravity="fill"
            style="@style/WeatherTextView" />
    </android.support.v7.widget.GridLayout>

</LinearLayout>